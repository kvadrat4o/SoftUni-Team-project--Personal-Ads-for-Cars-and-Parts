@model UserProductsListViewModel

@{
    ViewData["Title"] = "All products for sale.";
}

<h2>@Model.UserName products for sale:</h2>

@if (Model.ProductsToSell.Count() != 0)
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th></th>
        </tr>
        @foreach (var item in Model.ProductsToSell)
        {
            <tr>
                <th>@item.Title</th>
                <th>@item.Quantity</th>
                <th>
                    <a href="~/Product/Edit?title=@item.Title" class="btn btn-warning">Edit</a>
                    <a href="~/Product/Details?title=@item.Title" class="btn btn-primary">Details</a>
                    <a href="~/Product/Delete?title=@item.Title" class="btn btn-danger">Delete</a>
                </th>
            </tr>
        }
    </table>
}
else
{
    <h2>No products for sale.</h2>
}
