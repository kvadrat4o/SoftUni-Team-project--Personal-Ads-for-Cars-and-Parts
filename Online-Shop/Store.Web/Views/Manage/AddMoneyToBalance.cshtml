@model AddMoneyToBalanceViewModel
@{
    ViewData["Title"] = "Add money to your balance";
    ViewData.AddActivePage(ManageNavPages.AddMoneyToBalance);
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Owner</label>
                <input type="text" />
            </div>
            <div class="form-group CSC">
                <label asp-for="CardSecurityCode">CSC</label>
                <input asp-for="CardSecurityCode" class="form-control" />
                <span asp-validation-for="CardSecurityCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreditCardNumber" autocomplete="off">Credit Card Number</label>
                <input asp-for="CreditCardNumber" class="form-control" />
                <span asp-validation-for="CreditCardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoneyBalance">Money to transfer</label>
                <input asp-for="MoneyBalance" class="form-control" />
            </div>
            <div class="form-group" id="expiration-date">
                <label>Expiration Date</label>
                <select>
                    <option value="01">January</option>
                    <option value="02">February </option>
                    <option value="03">March</option>
                    <option value="04">April</option>
                    <option value="05">May</option>
                    <option value="06">June</option>
                    <option value="07">July</option>
                    <option value="08">August</option>
                    <option value="09">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>
                <select>
                    <option value="16"> 2016</option>
                    <option value="17"> 2017</option>
                    <option value="18"> 2018</option>
                    <option value="19"> 2019</option>
                    <option value="20"> 2020</option>
                    <option value="21"> 2021</option>
                </select>
            </div>
            <div class="form-group" id="credit_cards">
                <img src="/images/visa.png" width="90" height="50" id="visa">
                <img src="/images/mastercard.png" width="90" height="50" id="mastercard">
            </div>
            <button type="submit" class="btn btn-default">Finish</button>
        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
