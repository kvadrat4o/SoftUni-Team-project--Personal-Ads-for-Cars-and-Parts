@using Microsoft.AspNetCore.Identity
@using Store.Web.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <div class="dropdown">
                    <button class="btn btn-link navbar-btn navbar-link" type="button" id="menu1" data-toggle="dropdown">
                        @UserManager.GetUserName(User)
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu my-blue-border my-nav-bg my-blue-border" role="menu" aria-labelledby="menu1">
                        <li role="presentation"><a asp-area="" asp-controller="User" asp-action="Details" class="my-dropdown-ancor-tag" title="Profile" role="menuitem" tabindex="-1">Account</a></li>
                        <li role="presentation"><a asp-area="" asp-controller="Manage" asp-action="Index"class="my-dropdown-ancor-tag" >Settings</a></li>
                        <li role="presentation" class="divider my-divider"></li>
                        <li role="presentation"><a asp-area="" asp-controller="User" asp-action="ProductsForSale"class="my-dropdown-ancor-tag" >My Products</a></li>
                        <li role="presentation"><a asp-area="" asp-controller="Invoice" asp-action="ListOrders"class="my-dropdown-ancor-tag" >Orders</a></li>
                        <li role="presentation"><a asp-area="" asp-controller="Product" asp-action="Create"class="my-dropdown-ancor-tag" >New Product</a></li>
                    </ul>
                </div>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
