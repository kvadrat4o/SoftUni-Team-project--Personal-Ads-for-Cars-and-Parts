@{
    ViewBag.Title = "Contact";
}

<div class="col-md-8 col-md-offset-2">
    <div class="card">
        <br />
        <h1 class="text-center">Ticket</h1>

        <br />

        <div class="col-md-6 col-md-push-3 input text-center">

            @using (Html.BeginForm("SendTicket", "Message", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="input-group col-md-6 col-md-push-3 input text-center">
                    <div class="form-group">
                        <input class="form-control text-center" name="title" placeholder="Enter title here" type="text">
                    </div>
                </div>

                <div class="input-group">
                    <span class="input-group-addon">
                        <textarea class="form-control text-center" name="content" rows="6" cols="50" placeholder="Enter your message here"></textarea>
                    </span>
                </div>

                <input type="text" class="fade" name="senderEmail" value="@this.User.Identity.Name" />

                <div class="form-group">
                    <div style="margin-left: 110px">
                        <input type="submit" value="Send Message" class="btn btn-primary btn-round pull-left" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>


